<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.shbestwin.followupmanager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.shbestwin.followupmanager.view.widget.CardLayout
        android:id="@+id/cardLayout"
        style="@style/ContentLayoutStyle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <com.shbestwin.followupmanager.view.widget.CardHeaderLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleText="肥胖分析" />

            <TextView
                android:id="@+id/obesityAnalysisTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_large"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <com.shbestwin.followupmanager.view.widget.CardHeaderLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleText="风险因素" />

            <TextView
                android:id="@+id/riskFactorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:lineSpacingMultiplier="1.2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_large"
                android:visibility="gone" />
        </LinearLayout>
    </com.shbestwin.followupmanager.view.widget.CardLayout>

</ScrollView>