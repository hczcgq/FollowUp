<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <RadioGroup
        android:id="@+id/rg_jpkg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="健康评价：" />

        <RadioButton
            android:id="@+id/rb_jpkg_tjwyc"
            style="@style/RadioButtonStyle"
            android:checked="true"
            android:text="体检无异常" />

        <RadioButton
            android:id="@+id/rb_jpkg_yyc"
            style="@style/RadioButtonStyle"
            android:layout_marginLeft="20dp"
            android:text="有异常" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="异常1：" />

        <EditText
            android:id="@+id/et_yc_1"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="异常2：" />

        <EditText
            android:id="@+id/et_yc_2"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="异常3：" />

        <EditText
            android:id="@+id/et_yc_3"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />
    </LinearLayout>

</LinearLayout>