<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/guideLabelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/rehabilitationGoalLabel"
            style="@style/GeneralExaminationLabelStyle"
            android:layout_alignBaseline="@+id/rehabilitationGoal0"
            android:text="指导：" />

        <CheckBox
            android:id="@+id/rehabilitationGoal0"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/rehabilitationGoalLabel"
            android:text="喂养指导" />

        <CheckBox
            android:id="@+id/rehabilitationGoal1"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/rehabilitationGoal0"
            android:text="发育指导" />

        <CheckBox
            android:id="@+id/rehabilitationGoal2"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/rehabilitationGoal1"
            android:text="防病指导" />

        <CheckBox
            android:id="@+id/rehabilitationGoal3"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/rehabilitationGoal2"
            android:text="预防伤害指导" />

        <CheckBox
            android:id="@+id/rehabilitationGoal4"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_alignBaseline="@+id/otherRehabilitationGoalTextView"
            android:layout_below="@id/rehabilitationGoal0"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rehabilitationGoalLabel"
            android:text="口腔保健指导" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="130dp"
            android:text="特殊医嘱及处理：" />

        <EditText
            android:id="@+id/et_tsyzjcl"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="500dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="130dp"
            android:text="下次随访日期：" />

        <EditText
             android:id="@+id/et_xcsfrq"
             android:editable="false"
             android:clickable="true"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="180dp"
            android:drawableRight="@drawable/icon_calendar" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="下次随访地点：" />

        <EditText
             android:id="@+id/et_xcsfdd"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="180dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="随访医生签名：" />

        <EditText
             android:id="@+id/et_sfysqm"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="180dp" />
    </LinearLayout>

</LinearLayout>