<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:contentDescription="@null"
        android:visibility="gone"
        android:src="@drawable/login_logo" />
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/login_logo_top" />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="便携健康一体机"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:textColor="@color/white"
		    android:textSize="@dimen/dp30"/>
       
    </LinearLayout>
    

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/login_icon_account" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入用户名"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/global_font_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/login_icon_password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
           android:background="@drawable/login_edittext_bg"
            android:gravity="center"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/global_font_size_large" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/ck_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:button="@drawable/login_checkbox_selector"
        android:paddingLeft="10dp"
        android:text="记住密码"
        android:textColor="@color/white"
        android:textSize="@dimen/global_font_size_large" />

    
     <Button
            android:id="@+id/localLoginButton"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_white_selector"
            android:text="登录"
            android:layout_marginTop="50dp"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/global_font_size_large" />
    
