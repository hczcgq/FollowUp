<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="30dp"
            android:text="日吸烟量(支)：" />

        <EditText
            android:id="@+id/et_rxyl_dqz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="当前值" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <EditText
            android:id="@+id/et_rxyl_mbz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="目标值" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="50dp"
            android:minWidth="130dp"
            android:text="日饮酒量(两)：" />

        <EditText
            android:id="@+id/et_ryjl_dqz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="当前值" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <EditText
            android:id="@+id/et_ryjl_mbz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="目标值" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="30dp"
            android:text="运动量：" />

        <EditText
            android:id="@+id/et_ydl_cz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:text="次/周" />

        <EditText
            android:id="@+id/et_ydl_fc"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:text="分钟/次" />
<!--  
        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="40dp"
            android:text="/" />

        <EditText
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:text="次/周" />

        <EditText
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:text="分钟/次" />
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="30dp"
            android:text="摄盐情况(克/天)：" />

        <EditText
            android:id="@+id/et_syqk_dqz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="当前值" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <EditText
            android:id="@+id/et_syqk_mbz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="目标值" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="40dp"
            android:text="/" />

        <Spinner
            android:id="@+id/sn_syqk_l"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="150dp"
            android:entries="@array/saltCondition" />
<!--  
        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <Spinner
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="150dp"
            android:entries="@array/saltCondition" />
-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="30dp"
            android:text="心理调整：" />

        <Spinner
            android:id="@+id/sn_xltz"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="150dp"
            android:entries="@array/heartAdjustment" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="50dp"
            android:minWidth="130dp"
            android:text="遵医行为：" />

        <Spinner
            android:id="@+id/sn_zyxw"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="150dp"
            android:entries="@array/complianceBehavior" />
    </LinearLayout>

</LinearLayout>