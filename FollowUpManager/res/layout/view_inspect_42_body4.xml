<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/PostpartumLeftLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/leftBreastLabel"
            style="@style/GeneralExaminationLabelStyle"
            android:layout_alignBaseline="@+id/PostpartumLeftNone"
            android:minWidth="130dp"
            android:text="左侧乳腺：" />

        <CheckBox
            android:id="@+id/PostpartumLeftNone"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/leftBreastLabel"
            android:checked="true"
            android:text="未见异常" />

        <CheckBox
            android:id="@+id/leftBreast1"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/PostpartumLeftNone"
            android:text="乳房切除" />

        <CheckBox
            android:id="@+id/leftBreast2"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/leftBreast1"
            android:text="异常泌乳" />

        <CheckBox
            android:id="@+id/leftBreast3"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/leftBreast2"
            android:text="乳腺包块" />

        <CheckBox
            android:id="@+id/leftBreast4"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_below="@id/PostpartumLeftNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/leftBreastLabel"
            android:text="乳腺增生" />

        <CheckBox
            android:id="@+id/leftBreast5"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_below="@id/PostpartumLeftNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/leftBreast4"
            android:text="胰液" />

        <CheckBox
            android:id="@+id/PostpartumLeftOther"
            style="@style/CheckBoxStyle"
            android:layout_width="90dp"
            android:layout_below="@id/PostpartumLeftNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/leftBreast5"
            android:text="其他" />

        <EditText
            android:id="@+id/PostpartumLeftEdittext"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/PostpartumLeftOther"
            android:layout_below="@id/PostpartumLeftNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/PostpartumLeftOther"
            android:background="@drawable/edit_text_with_padding_selector"
            android:gravity="center_vertical"
            android:textSize="@dimen/global_font_size_large" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PostpartumRightLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/rightBreastLabel"
            style="@style/GeneralExaminationLabelStyle"
            android:layout_alignBaseline="@+id/PostpartumRightNone"
            android:minWidth="130dp"
            android:text="右侧乳腺：" />

        <CheckBox
            android:id="@+id/PostpartumRightNone"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:checked="true"
            android:layout_toRightOf="@id/rightBreastLabel"
            android:text="未见异常" />

        <CheckBox
            android:id="@+id/rightBreast1"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/PostpartumRightNone"
            android:text="乳房切除" />

        <CheckBox
            android:id="@+id/rightBreast2"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/rightBreast1"
            android:text="异常泌乳" />

        <CheckBox
            android:id="@+id/rightBreast3"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_toRightOf="@id/rightBreast2"
            android:text="乳腺包块" />

        <CheckBox
            android:id="@+id/rightBreast4"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_below="@id/PostpartumRightNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rightBreastLabel"
            android:text="乳腺增生" />

        <CheckBox
            android:id="@+id/rightBreast5"
            style="@style/CheckBoxStyle"
            android:layout_width="160dp"
            android:layout_below="@id/PostpartumRightNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rightBreast4"
            android:text="胰液" />

        <CheckBox
            android:id="@+id/PostpartumRightOther"
            style="@style/CheckBoxStyle"
            android:layout_width="90dp"
            android:layout_below="@id/PostpartumRightNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rightBreast5"
            android:text="其他" />

        <EditText
            android:id="@+id/postpartumRightEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/PostpartumRightOther"
            android:layout_below="@id/PostpartumRightNone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/PostpartumRightOther"
            android:background="@drawable/edit_text_with_padding_selector"
            android:gravity="center_vertical"
            android:textSize="@dimen/global_font_size_large" />
    </RelativeLayout>

</LinearLayout>