<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="130dp"
            android:text="日期：" />

        <EditText
            android:id="@+id/et_rq"
            android:clickable="true"
            android:enabled="true"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp"
            android:drawableRight="@drawable/icon_calendar" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bfzRelativeLayout"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/complicationTextView"
            style="@style/GeneralExaminationLabelStyle"
            android:layout_centerVertical="true"
            android:minWidth="130dp"
            android:text="并发症：" />

        <CheckBox
            android:id="@+id/complication0"
            style="@style/CheckBoxStyle"
            android:layout_width="145dp"
            android:layout_toRightOf="@id/complicationTextView"
            android:text="足病" />

        <CheckBox
            android:id="@+id/complication1"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complication0"
            android:text="肾病" />

        <CheckBox
            android:id="@+id/complication2"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complication1"
            android:text="眼病" />

        <CheckBox
            android:id="@+id/complication3"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complication2"
            android:text="脑病" />

        <CheckBox
            android:id="@+id/complication4"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complication3"
            android:text="心脏病" />

        <CheckBox
            android:id="@+id/complication5"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complication4"
            android:text="皮肤病" />

        <CheckBox
            android:id="@+id/complication6"
            style="@style/CheckBoxStyle"
            android:layout_width="145dp"
            android:layout_below="@id/complication0"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complicationTextView"
            android:text="性病" />

        <CheckBox
            android:id="@+id/complication7"
            style="@style/CheckBoxStyle"
            android:layout_below="@id/complication0"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication6"
            android:minWidth="135dp"
            android:text="其他酮症酸中病" />

        <CheckBox
            android:id="@+id/complication8"
            style="@style/CheckBoxStyle"
            android:layout_below="@id/complication0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication7"
            android:minWidth="135dp"
            android:text="非酮症性高渗透性昏迷" />

        <CheckBox
            android:id="@+id/complication9"
            style="@style/CheckBoxStyle"
            android:layout_below="@id/complication0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication8"
            android:minWidth="135dp"
            android:text="乳酸性酸中毒" />

        <CheckBox
            android:id="@+id/complication10"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication9"
            android:text="低血糖昏迷" />

        <CheckBox
            android:id="@+id/complication11"
            style="@style/CheckBoxStyle"
            android:layout_width="145dp"
            android:layout_below="@id/complication6"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complicationTextView"
            android:text="泌尿道感染" />

        <CheckBox
            android:id="@+id/complication12"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication6"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication11"
            android:text="呼吸道感染" />

        <CheckBox
            android:id="@+id/complication13"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication6"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication12"
            android:text="皮肤感染" />

        <CheckBox
            android:id="@+id/complication14"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication6"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication13"
            android:text="酮症酸中毒" />

        <CheckBox
            android:id="@+id/complication15"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication6"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication14"
            android:text="心脏病变" />

        <CheckBox
            android:id="@+id/complication16"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication6"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication15"
            android:text="神经病变" />

        <CheckBox
            android:id="@+id/complication17"
            style="@style/CheckBoxStyle"
            android:layout_width="145dp"
            android:layout_below="@id/complication11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complicationTextView"
            android:text="眼部疾病" />

        <CheckBox
            android:id="@+id/complication18"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication17"
            android:text="糖尿病足" />

        <CheckBox
            android:id="@+id/complication19"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication18"
            android:text="心脏病" />

        <CheckBox
            android:id="@+id/complication20"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication19"
            android:text="脑血管病变" />

        <CheckBox
            android:id="@+id/complication21"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication20"
            android:text="肢端坏疽" />

        <CheckBox
            android:id="@+id/complication22"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complication11"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complication21"
            android:text="其他" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hbzRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/complaintTextView"
            style="@style/GeneralExaminationLabelStyle"
            android:layout_centerVertical="true"
            android:minWidth="130dp"
            android:text="合并症：" />

        <CheckBox
            android:id="@+id/complaint0"
            style="@style/CheckBoxStyle"
            android:layout_width="145dp"
            android:layout_toRightOf="@id/complaintTextView"
            android:text="神经病变" />

        <CheckBox
            android:id="@+id/complaint1"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complaint0"
            android:text="眼部病变" />

        <CheckBox
            android:id="@+id/complaint2"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complaint1"
            android:text="心脑血管" />

        <CheckBox
            android:id="@+id/complaint3"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complaint2"
            android:text="肾病" />

        <CheckBox
            android:id="@+id/complaint4"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_toRightOf="@id/complaint3"
            android:text="高血脂" />

        <CheckBox
            android:id="@+id/complaint5"
            style="@style/CheckBoxStyle"
            android:layout_width="180dp"
            android:layout_toRightOf="@id/complaint4"
            android:text="伴有感染" />

        <CheckBox
            android:id="@+id/complaint6"
            style="@style/CheckBoxStyle"
            android:layout_width="145dp"
            android:layout_below="@id/complaint0"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complaintTextView"
            android:text="肝脏异常" />

        <CheckBox
            android:id="@+id/complaint7"
            style="@style/CheckBoxStyle"
            android:layout_width="135dp"
            android:layout_below="@id/complaint0"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/complaint6"
            android:text="其他" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="130dp"
            android:text="其他疾病：" />

        <EditText
            android:id="@+id/et_qtjb"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="130dp"
            android:text="下次随访日期：" />

        <EditText
            android:id="@+id/et_xcsfrq"
            android:editable="false"
            android:clickable="true"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp"
            android:drawableRight="@drawable/icon_calendar" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="随访医生签名：" />

        <EditText
            android:id="@+id/et_sfysqm"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp"
            android:text="管理员" />
    </LinearLayout>

</LinearLayout>