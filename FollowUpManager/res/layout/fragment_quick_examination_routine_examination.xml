<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="体温检测："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_blue_selector"
                android:enabled="false"
                android:text="获取数据"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="体温："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/temperatureEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="℃"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="结论："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/temperatureConclusionEditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="体质指数："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_blue_selector"
                android:enabled="false"
                android:text="获取数据"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="身高："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="cm"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="体重："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="kg"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="BMI："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/BMIEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="结论："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/physiqueConclusionEditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="三围检测："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <Button
                android:id="@+id/getWaistlineButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_blue_selector"
                android:text="获取数据"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/getHiplineButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="180dp"
                android:background="@drawable/button_blue_selector"
                android:text="获取数据"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/getBustButton"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="180dp"
                android:background="@drawable/button_blue_selector"
                android:text="获取数据"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="腰围："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/waistlineEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="cm"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="臀围："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/hiplineEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="cm"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="胸围："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/bustEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="cm"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="腰臀比："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/waistToHipratioEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:minWidth="100dp"
                android:text="结论："
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />

            <EditText
                android:id="@+id/BWHConclusionEditText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_with_padding_selector"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/global_font_size_middle" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>