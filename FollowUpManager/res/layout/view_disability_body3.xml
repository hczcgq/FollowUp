<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="100dp"
            android:text="症状：" />

        <EditText
            android:id="@+id/et_zz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="200dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="100dp"
            android:text="体重(kg)：" />

        <EditText
            android:id="@+id/et_tz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="200dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="100dp"
            android:text="血压(mmHg)：" />

        <EditText
            android:id="@+id/et_xy_ssy"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="收缩压" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <EditText
            android:id="@+id/et_xy_szy"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="舒张压" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:minWidth="100dp"
            android:text="心率(次/分钟)：" />

        <EditText
            android:id="@+id/et_xl"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="200dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="100dp"
            android:text="其他：" />

        <EditText
            android:id="@+id/et_qt"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="200dp" />
    </LinearLayout>

</LinearLayout>