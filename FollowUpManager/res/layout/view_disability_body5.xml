<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

    <RadioGroup
        android:id="@+id/rg_smoking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="是否吸烟：" />

        <RadioButton
            android:id="@+id/rb_smoking_w"
            style="@style/RadioButtonStyle"
            android:checked="true"
            android:text="否" />

        <RadioButton
            android:id="@+id/rb_smoking_y"
            style="@style/RadioButtonStyle"
            android:layout_marginLeft="20dp"
            android:text="是" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="日吸烟量：" />

        <EditText
            android:id="@+id/et_smoking"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="次" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_drinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="是否饮酒：" />

        <RadioButton
            android:id="@+id/rb_drinking_w"
            style="@style/RadioButtonStyle"
            android:checked="true"
            android:text="否" />

        <RadioButton
            android:id="@+id/rb_drinking_y"
            style="@style/RadioButtonStyle"
            android:layout_marginLeft="20dp"
            android:text="是" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="酒的种类：" />

        <Spinner
            android:id="@+id/sn_drinking"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="220dp"
            android:entries="@array/wineType" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="日饮酒量：" />

        <EditText
            android:id="@+id/et_drinking"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="两/次" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_sporting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="是否运动：" />

        <RadioButton
            android:id="@+id/rb_sporting_w"
            style="@style/RadioButtonStyle"
            android:checked="true"
            android:text="否" />

        <RadioButton
             android:id="@+id/rb_sporting_y"
            style="@style/RadioButtonStyle"
            android:layout_marginLeft="20dp"
            android:text="是" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:text="运动频率：" />

        <EditText
             android:id="@+id/et_sporting_cz"
             style="@style/GeneralExaminationEditTextStyle" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_width="wrap_content"
            android:minWidth="30dp"
            android:text="次/周" />

        <EditText
            android:id="@+id/et_sporting_fc"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_marginLeft="20dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="分钟/次" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="运动项目：" />

        <EditText
            android:id="@+id/et_ysxm"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="摄盐情况(克/天)：" />

        <EditText
            android:id="@+id/et_syqk_dqz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="当前值" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <EditText
            android:id="@+id/et_syqk_mbz"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="100dp"
            android:hint="目标值" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <Spinner
            android:id="@+id/sn_syqk_cd_1"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="100dp"
            android:entries="@array/saltCondition" />

        <TextView
            style="@style/GeneralExaminationTipsStyle"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:minWidth="20dp"
            android:text="/" />

        <Spinner
            android:id="@+id/sn_syqk_cd_2"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="100dp"
            android:entries="@array/saltCondition" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="心理调整：" />

        <Spinner
            android:id="@+id/sn_xltz"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="220dp"
            android:entries="@array/psychologicalRecovery" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="遵医行为：" />

        <Spinner
             android:id="@+id/sn_zyxw"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="180dp"
            android:entries="@array/complianceBehavior" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="随访评估：" />

        <Spinner
             android:id="@+id/sn_sfpg"
            style="@style/GeneralExaminationSpinnerStyle"
            android:layout_width="180dp"
            android:entries="@array/followupEvaluate" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:text="康复建议：" />

        <EditText
             android:id="@+id/et_kfjy"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="220dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="下次随访日期：" />

        <EditText
            android:id="@+id/et_xcsfrq"
           android:editable="false"
            android:clickable="true"
            style="@style/GeneralExaminationEditTextStyle"
            android:drawableRight="@drawable/icon_calendar"
            android:layout_width="180dp" />

        <TextView
            style="@style/GeneralExaminationLabelStyle"
            android:layout_marginLeft="20dp"
            android:minWidth="130dp"
            android:text="随访医生签名：" />

        <EditText
            android:id="@+id/et_sfysqm"
            style="@style/GeneralExaminationEditTextStyle"
            android:layout_width="180dp" />
    </LinearLayout>

</LinearLayout>