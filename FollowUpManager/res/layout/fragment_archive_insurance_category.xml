<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContentLayoutStyle" >

    <CheckBox
        android:id="@+id/insuranceCategory0"
        style="@style/CheckBoxStyle"
        android:layout_alignBaseline="@+id/insuranceCategoryEditText"
        android:minWidth="80dp"
        android:text="医保" />

    <EditText
        android:id="@+id/insuranceCategoryEditText"
        style="@style/PersonalInfoEditTextStyle"
        android:layout_toRightOf="@id/insuranceCategory0"
        android:hint="请输入医保卡号" />

    <CheckBox
        android:id="@+id/insuranceCategory1"
        style="@style/CheckBoxStyle"
        android:layout_below="@id/insuranceCategory0"
        android:layout_marginTop="15dp"
        android:minWidth="250dp"
        android:text="商业医疗保险" />

    <CheckBox
        android:id="@+id/insuranceCategory2"
        style="@style/CheckBoxStyle"
        android:layout_below="@id/insuranceCategory0"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/insuranceCategory1"
        android:minWidth="180dp"
        android:text="大病统筹" />

    <CheckBox
        android:id="@+id/insuranceCategory3"
        style="@style/CheckBoxStyle"
        android:layout_below="@id/insuranceCategory0"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/insuranceCategory2"
        android:text="新型农村合作医疗" />

    <CheckBox
        android:id="@+id/insuranceCategory4"
        style="@style/CheckBoxStyle"
        android:layout_below="@id/insuranceCategory1"
        android:layout_marginTop="15dp"
        android:minWidth="250dp"
        android:text="城镇居民基本医疗保险" />

    <CheckBox
        android:id="@+id/insuranceCategory5"
        style="@style/CheckBoxStyle"
        android:layout_below="@id/insuranceCategory1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/insuranceCategory4"
        android:minWidth="180dp"
        android:text="公费医疗" />

    <CheckBox
        android:id="@+id/insuranceCategory6"
        style="@style/CheckBoxStyle"
        android:layout_below="@id/insuranceCategory1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/insuranceCategory5"
        android:text="其他" />

</RelativeLayout>