<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:layout_marginBottom="20dp" >

    <TextView
        android:id="@+id/illnessLabel"
        style="@style/GeneralExaminationLabelStyle"
        android:layout_alignBaseline="@+id/illness0"
        android:text="两次随访间患病情况：" />

    <CheckBox
        android:id="@+id/illness0"
        style="@style/CheckBoxStyle"
        android:layout_width="60dp"
        android:layout_toRightOf="@id/illnessLabel"
        android:text="无" />

    <CheckBox
        android:id="@+id/illness1"
        style="@style/CheckBoxStyle"
        android:layout_width="80dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/illness0"
        android:text="肺炎" />

    <EditText
        android:id="@+id/et_fy"
        style="@style/GeneralExaminationEditTextStyle"
        android:layout_width="80dp"
        android:layout_alignBaseline="@id/illness1"
        android:layout_toRightOf="@id/illness1" />

    <TextView
        android:id="@+id/pneumoniaCountUnit"
        style="@style/GeneralExaminationTipsStyle"
        android:layout_alignBaseline="@id/et_fy"
        android:layout_toRightOf="@id/et_fy"
        android:text="次" />

    <CheckBox
        android:id="@+id/illness2"
        style="@style/CheckBoxStyle"
        android:layout_width="80dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/pneumoniaCountUnit"
        android:text="腹泻" />

    <EditText
        android:id="@+id/et_fx"
        style="@style/GeneralExaminationEditTextStyle"
        android:layout_width="80dp"
        android:layout_alignBaseline="@id/illness2"
        android:layout_toRightOf="@id/illness2" />

    <TextView
        style="@style/GeneralExaminationTipsStyle"
        android:layout_alignBaseline="@id/et_fx"
        android:layout_toRightOf="@id/et_fx"
        android:text="次" />

    <CheckBox
        android:id="@+id/illness3"
        style="@style/CheckBoxStyle"
        android:layout_width="80dp"
        android:layout_below="@id/illness0"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/illnessLabel"
        android:text="外伤" />

    <EditText
        android:id="@+id/et_ws"
        style="@style/GeneralExaminationEditTextStyle"
        android:layout_width="80dp"
        android:layout_alignBaseline="@id/illness3"
        android:layout_below="@id/illness0"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/illness3" />

    <TextView
        android:id="@+id/injuryCountUnit"
        style="@style/GeneralExaminationTipsStyle"
        android:layout_alignBaseline="@id/et_ws"
        android:layout_below="@id/illness0"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/et_ws"
        android:text="次" />

    <CheckBox
        android:id="@+id/illness4"
        style="@style/CheckBoxStyle"
        android:layout_width="80dp"
        android:layout_below="@id/illness0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/injuryCountUnit"
        android:text="其他" />

    <EditText
        android:id="@+id/et_qt"
        style="@style/GeneralExaminationEditTextStyle"
        android:layout_width="220dp"
        android:layout_alignBaseline="@id/illness3"
        android:layout_below="@id/illness0"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/illness4" />

</RelativeLayout>