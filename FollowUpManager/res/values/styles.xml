<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@color/main_bg</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ContentLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="PersonalInfoItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PersonalInfoLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="PersonalInfoEditTextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_with_padding_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="PersonalInfoSpinnerStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_bg_normal</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="GeneralExaminationLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="GeneralExaminationEditTextStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_with_padding_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="GeneralExaminationTipsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="GeneralExaminationSpinnerStyle">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_bg_normal</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    <style name="GeneralEducationLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">130dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

    
    <style name="GeneralEducationTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/global_font_size_large</item>
    </style>

</resources>